<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Cores principais do tema -->
    <Color x:Key="Primary">#8A4FFF</Color>
    <Color x:Key="PrimaryDark">#6A2FDF</Color>
    <Color x:Key="PrimaryLight">#B28AFF</Color>

    <Color x:Key="Secondary">#F2E2C4</Color>
    <Color x:Key="SecondaryDark">#E5D0A4</Color>
    <Color x:Key="SecondaryLight">#FFF5E0</Color>

    <Color x:Key="TextPrimary">#333333</Color>
    <Color x:Key="TextSecondary">#666666</Color>

    <Color x:Key="Background">White</Color>
    <Color x:Key="Surface">#FAFAFA</Color>
    <Color x:Key="Error">#B00020</Color>
    <Color x:Key="Success">#4CAF50</Color>
</ResourceDictionary>